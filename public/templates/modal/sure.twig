<!doctype html>

<div class="modal-header">
  <h4 class="modal-title">{{ title }}</h4>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
</div>
<div class="modal-body">
  <p>
    {{ content|raw }}
  </p>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-success" data-dismiss="modal" id="yesButtonOnSureModal">{{ yes }}</button>
  <button type="button" class="btn btn-danger" data-dismiss="modal" id="noButtonOnSureModal">{{ no }}</button>
</div>

<script>
  function doModalKeyEvent(e) {
    if (e.keyCode == 13) {
      // ENTER
      $('#yesButtonOnSureModal').trigger('click');
    }
  }

  $('#modal').keyup(doModalKeyEvent);
</script>
